<body style="background: url(http://cfile1.uf.tistory.com/image/1721E73651011D8131606E) no-repeat fixed; background-size: cover;">	
<h2>비밀번호 변경</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, autocomplete: "off", hint: "원하지 않으면 비워두세요.", required: false %>
    <%= f.input :password_confirmation, required: false %>
    <%= f.input :current_password, hint: "현재 비밀번호를 입력하세요.", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<h3>내 계정 삭제</h3>

<p>Unhappy? <%= link_to "계정 삭제", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
</div>
